{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "declaration": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["app/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "references": [{ "path": "../shared" }]
}
